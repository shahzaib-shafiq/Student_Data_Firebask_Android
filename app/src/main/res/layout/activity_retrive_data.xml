<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dad7cd"
    tools:context=".RetriveData">

   <TextView
       android:id="@+id/txtsturec"
       android:layout_width="280dp"
       android:layout_height="37dp"
       android:layout_marginTop="40dp"

       android:text="Search Student"
       android:textAlignment="center"
       android:textAllCaps="true"
       android:textColor="#3a5a40"
       android:textSize="17sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.498"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="HardcodedText,TextSizeCheck" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recyclerViewcgpa"
       android:layout_width="343dp"
       android:layout_height="140dp"
       android:layout_marginTop="28dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/edtrecstu"
       tools:ignore="MissingConstraints,TextSizeCheck" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recyclerViewdept"
       android:layout_width="321dp"
       android:layout_height="132dp"
       android:layout_marginTop="28dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/edtrecept"
       tools:ignore="TextSizeCheck" />

   <EditText
       android:id="@+id/edtrecstu"
       android:layout_width="185dp"
       android:layout_height="45dp"
       android:layout_marginStart="44dp"
       android:layout_marginTop="80dp"
       android:ems="10"
       android:gravity="start|top"
       android:hint="Search by CGPA"
       android:inputType="textMultiLine"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/txtsturec"
       tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="80dp"

       android:onClick="Search_Stuent_With_Cgpa"
       android:text="Search"
       android:textColor="#795548"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.524"
       app:layout_constraintStart_toEndOf="@+id/edtrecstu"
       app:layout_constraintTop_toBottomOf="@+id/txtsturec"
       tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck" />

   <EditText
       android:id="@+id/edtrecept"
       android:layout_width="172dp"
       android:layout_height="48dp"
       android:layout_marginStart="44dp"
       android:layout_marginTop="44dp"
       android:ems="10"
       android:hint="Search By Dept"
       android:gravity="start|top"
       android:inputType="textMultiLine"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/recyclerViewcgpa"
       tools:ignore="Autofill,HardcodedText" />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/button3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="44dp"
       android:onClick="Search_Stuent_With_Dept"

       android:text="Search"
       android:textColor="#795548"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.538"
       app:layout_constraintStart_toEndOf="@+id/edtrecept"
       app:layout_constraintTop_toBottomOf="@+id/recyclerViewcgpa"
       tools:ignore="HardcodedText" />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/btnmenu2"
       android:layout_width="186dp"
       android:layout_height="42dp"

       android:onClick="Menu"
       android:text="Menu"
       android:textColor="@color/white"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/recyclerViewdept"
       tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>